{% extends 'base.html.twig' %}

{% block title %}Pupil{% endblock %}

{% block body %}
    <h1>Pupil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pupil.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ pupil.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ pupil.lastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ pupil.birthdate ? pupil.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Classroom</th>
                <td>{{ pupil.classroom.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pupil_index') }}">back to list</a>

    <a href="{{ path('app_pupil_edit', {'id': pupil.id}) }}">edit</a>

    {{ include('pupil/_delete_form.html.twig') }}
{% endblock %}
