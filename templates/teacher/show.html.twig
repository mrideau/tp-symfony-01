{% extends 'base.html.twig' %}

{% block title %}Teacher{% endblock %}

{% block body %}
    <h1>Teacher</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ teacher.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ teacher.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ teacher.firstname }}</td>
            </tr>
            <tr>
                <th>Classrooms</th>
                <td>
                    {% for classroom in teacher.classrooms %}
                        {{ classroom.name }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_teacher_index') }}">back to list</a>

    <a href="{{ path('app_teacher_edit', {'id': teacher.id}) }}">edit</a>

    {{ include('teacher/_delete_form.html.twig') }}
{% endblock %}
